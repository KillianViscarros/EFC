<html lang="fr">

<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <!-- Bootstrap CSS -->
    <link rel="stylesheet" 
href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css" integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    {% block stylesheets %}
    {% endblock %}
    <title>Blog - {% block title %}{% endblock %}</title>



<body>
	<body>
		<div class="main">
		    <!-- Si l'utilisateur n'est pas connecté, affiche les options de connexion et d'inscription -->
			{% if not app.user  %}
			<nav class="navbar navbar-expand navbar-light navbar-bg">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="navbar-brand" href="{{ path('app_login') }}"><i class="align-middle mr-1" data-feather="pie-chart"></i> Se connecter <span class="sr-only">(current)</span></a>
					</li>
                    <li class="nav-item">
						<a class="navbar-brand" href="{{ path('app_register') }}"><i class="align-middle mr-1" data-feather="settings"></i>S'inscrire</a>
					</li>
				</ul>  
              </a>
			</nav>
			<!-- Si l'utilisateur est connecté, affiche les options liées à son compte -->
			{% else %}
			<nav class="navbar navbar-expand navbar-light navbar-bg">
				<ul class="navbar-nav">
					<li class="nav-item active">
						<a class="navbar-brand" href="{{ path('homepage') }}"><i class="align-middle mr-1" data-feather="pie-chart"></i> Faire le questionnaire <span class="sr-only">(current)</span></a>
					</li>
            <!-- Si l'utilisateur a le rôle d'administrateur, des options supplémentaires peuvent être ajoutées ici -->					
			{% if is_granted('ROLE_ADMIN') %}

					{% endif %}
				</ul>
				<div class="navbar-collapse collapse">
					<ul class="navbar-nav navbar-align">
						<li class="nav-item dropdown"></li>
						<li class="nav-item dropdown">
							<a class="nav-link dropdown-toggle d-none d-sm-inline-block" href="#" data-toggle="dropdown">
								<img src="img/avatars/avatar.jpg" class="avatar img-fluid rounded mr-1" alt="  "/>
								<span class="text-dark">{{app.user.email}}</span>
							</a>
							<div class="dropdown-menu dropdown-menu-right">
                                <a class="dropdown-item" href="{{ path('app_scores') }}">
									Historiques des scores
								</a>
								<a class="dropdown-item" href="{{ path('app_logout') }}">
									Déconnexion
								</a>
							</div>
						</li>
					</ul>
				</div>
			</nav> 
			{% endif %}
    {% block content %}{% endblock %}
    </div>
    
    {% block scripts %}
    <!-- jQuery first, then Popper.js, then Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js" integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js" integrity="sha384-ApNbgh9B+Y1QKtv3Rn7W3mgPxhU9K/ScQsAP7hUibX39j7fakFPskvXusvfa0b4Q" crossorigin="anonymous"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js" integrity="sha384-JZR6Spejh4U02d8jOt6vLEHfe/JQGiRRSQQxSfFWpi1MquVdAyjUar5+76PVCmYl" crossorigin="anonymous"></script>
    {% endblock %}
</body>

</html>
