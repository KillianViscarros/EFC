{% block content %}
{% if not app.user  %}
{% else %}

<form method="post" >
    <div class="container-fluid">
        <table class="table">
            <thead>
                <tr>
                    <th scope="col">Question</th>
                    <th scope="col">Cochez la case correspondant à votre réponse <br>
0 : Pas du tout d'accord<br>
1 : Plutôt pas d'accord<br>
2 : Plutôt d'accord<br>
3 : Tout à fait d'accord</th>

                </tr>
            </thead>
    <tbody>
    {% for question in idquestions %}

        <tr>
            <th scope="row">
                    <label>{{ question.question }}</label>
            </th>
            <td>
                <select name="question_{{ question.id }}">
                    <option value="0">0</option>
                    <option value="1">1</option>
                    <option value="2">2</option>
                    <option value="3">3</option>
                </select>
            </td>
        
    {% endfor %}

    </tr>
            </tbody>
        </table>
        <button type="submit">Envoyer</button
</form>

    <p>Total EFC : {{ totalEFC }}</p>
    <p>Total EIT : {{ totalEIT }}</p>
    <p>Total EC : {{ totalEC }}</p>
{% endif %}

